<UserControl x:Class="ImAged.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">

    <UserControl.Resources>
        <Style x:Key="FolderCardStyle"
               TargetType="Border">
            <Setter Property="Width"
                    Value="205"/>
            <Setter Property="Height"
                    Value="190"/>
            <Setter Property="CornerRadius"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="12"/>
            <Setter Property="Background"
                    Value="#35FFFFFF"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="4"
                                      Color="#66000000"
                                      Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="HeaderIconButton"
               TargetType="Button">
            <Setter Property="Width"
                    Value="100"/>
            <Setter Property="Height"
                    Value="100"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Background"
                    Value="#40FFFFFF"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#80FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="brd"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12"
                                                      ShadowDepth="0"
                                                      Color="#55000000"
                                                      Opacity="0.4"/>
                                </Border.Effect>
                            </Border>
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}"
                                           FontSize="30"
                                           Margin="0,0,0,4"
                                           HorizontalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="brd"
                                        Property="Background"
                                        Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="brd"
                                        Property="Background"
                                        Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,24">
            <Button Style="{StaticResource HeaderIconButton}"
                    Content="New document"
                    Tag="➕"
                    Margin="0,0,16,0"
                    Width="346"/>
            <Button Style="{StaticResource HeaderIconButton}"
                    Content="New project"
                    Tag="📁"
                    Margin="0,0,16,0"
                    Width="318"/>
            <Button Style="{StaticResource HeaderIconButton}"
                    Content="Manage permissions"
                    Tag="🔑"
                    Margin="0,0,16,0"
                    Width="312"/>
            <Button Style="{StaticResource HeaderIconButton}"
                    Content="Send file"
                    Tag="📤"
                    Width="337"/>
        </StackPanel>


        <TextBlock Grid.Row="1"
                   Text="All folders"
                   Foreground="White"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>


        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,16">
            <Button Content="Recent"
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"/>
            <Button Content="Shared"
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"/>
            <Button Content="Archived"
                    Width="100"
                    Height="36"/>
        </StackPanel>

        <ScrollViewer Grid.Row="3"
                      HorizontalScrollBarVisibility="Disabled">
            <WrapPanel>
                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Family Pictures"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            <TextBlock Text="16 images · 92 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Art"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            <TextBlock Text="42 images · 140 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Team Photos"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            <TextBlock Text="23 images · 76 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Account Information"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                            <TextBlock Text="11 files · 18 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Design"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            <TextBlock Text="34 images · 310 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource FolderCardStyle}">
                    <Grid>
                        <Ellipse Width="30"
                                 Height="30"
                                 Fill="#55FFFFFF"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="8"/>
                        <StackPanel VerticalAlignment="Bottom"
                                    Margin="12">
                            <TextBlock Text="Presentations"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            <TextBlock Text="8 files · 64 MB"
                                       Foreground="#DDDDDD"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
