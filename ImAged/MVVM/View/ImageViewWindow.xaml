<Window x:Class="ImAged.MVVM.View.ImageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image View" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="#060606" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="35" Background="#1E1E1E" MouseLeftButtonDown="WindowDrag">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                    <Button Style="{StaticResource WindowControlButtonMinimize}" Click="Minimize_Click"/>
                    <Button Style="{StaticResource WindowControlButtonMinimize}" Content="⛶" FontSize="8" Click="Maximize_Click"/>
                    <Button Style="{StaticResource WindowControlButtonClose}" Click="Close_Click"/>
                </StackPanel>

                <TextBlock x:Name="FileNameText"
                           DockPanel.Dock="Top"
                           Text="????"
                           Foreground="#D4D4D4"
                           FontSize="11"
                           FontWeight="SemiBold"
                           FontFamily="pack://application:,,,/ImAged;component/Fonts/Poppins/#Poppins Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            <!-- Window controls -->
            

            <!-- Main content below -->
            <Grid x:Name="ImageHost" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="ImageHost_Loaded" SizeChanged="ImageHost_SizeChanged">
                <Border x:Name="ImageContainer" Background="Transparent">
                    <Image x:Name="FullImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           RenderTransformOrigin="0,0"
                           MouseWheel="FullImage_MouseWheel"
                           MouseLeftButtonDown="FullImage_MouseLeftButtonDown"
                           MouseLeftButtonUp="FullImage_MouseLeftButtonUp"
                           MouseMove="FullImage_MouseMove">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1" />
                                <TranslateTransform x:Name="ImageTranslateTransform" X="0" Y="0" />
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Border>
            </Grid>

            <!-- Bottom bar (status or controls) -->
            <Grid Grid.Row="2" Height="35" Background="#1E1E1E" VerticalAlignment="Bottom" Panel.ZIndex="1">
                <TextBlock x:Name="StatusText"
                           Foreground="#D4D4D4"
                           FontSize="11"
                           FontFamily="pack://application:,,,/ImAged;component/Fonts/Poppins/#Poppins Medium"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
        
    </Border>
</Window>