<Window x:Class="ImAged.MVVM.View.ImageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image View" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="#060606" CornerRadius="10" MouseLeftButtonDown="WindowDrag">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Window controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,5,0">
                <Button Style="{StaticResource WindowControlButtonMinimize}" Click="Minimize_Click"/>
                <Button Style="{StaticResource WindowControlButtonMinimize}" Content="⛶" FontSize="8" Click="Maximize_Click"/>
                <Button Style="{StaticResource WindowControlButtonClose}" Click="Close_Click"/>
            </StackPanel>

            <TextBlock x:Name="FileNameText"
                       DockPanel.Dock="Top"
                       Text="????"
                       Foreground="#D4D4D4"
                       FontSize="11"
                       FontWeight="SemiBold"
                       FontFamily="pack://application:,,,/ImAged;component/Fonts/Poppins/#Poppins Medium"
                       HorizontalAlignment="Center"
                       Margin="0,6"/>   

            <!-- Main content below -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border x:Name="ImageContainer" Background="#060606">
                    <Image x:Name="FullImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>