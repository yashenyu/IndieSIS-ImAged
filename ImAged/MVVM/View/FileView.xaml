<UserControl x:Class="ImAged.MVVM.View.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImAged.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <!-- Left -->
            <ColumnDefinition Width="*" />
            <!-- Right -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <DockPanel Margin="10" Grid.Column="0">
            <!-- Search + Filter -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBox Width="250"
                         Height="30"
                         Background="#1E1E1E"
                         Foreground="#FFAFAAAA"
                         Padding="5"
                         Text="Search" BorderBrush="#FF525252" />
                
                <Button Content="Filter (3)"
                        Background="#1E1E1E"
                        Foreground="#FFA2A2A2"
                        Margin="10,0,0,0"
                        Height="30"
                        Width="80" BorderBrush="#FF525252" />
            </StackPanel>

            <!-- File List -->
            <ListView Background="#101010"
                      BorderThickness="0"
                      Foreground="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File name" Width="200" DisplayMemberBinding="{Binding FileName}" />
                        <GridViewColumn Header="Modified" Width="100" DisplayMemberBinding="{Binding Modified}" />
                        <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <!-- RIGHT SIDE -->
        <ScrollViewer Grid.Column="1" Background="#181818" Padding="10">
            <StackPanel>
                <!-- Image Preview -->
                <Image Source="preview.jpg"
                       Width="200"
                       Height="120"
                       Stretch="UniformToFill"
                       Margin="0,0,0,20" />

                <!-- No Access Text -->
                <TextBlock Text="Filename"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,5"/>
                <Separator Background="#FF292929" Width="180" HorizontalAlignment="Left" Margin="2,2,0,2"/>

                <!-- File Details -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Left">

                    <!-- File Details -->
                    <StackPanel Width="98" Margin="0,0,20,0">
                        <TextBlock Text="File Details" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="Type: " Foreground="Gray"/>
                        <TextBlock Text="File Size: " Foreground="Gray" Margin="0,5,0,0"/>
                        <TextBlock Text="Location: " Foreground="Gray" Margin="0,5,0,0"/>
                        <TextBlock Text="State: " Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Neighbor Panel -->
                    <StackPanel Width="150">
                        <TextBlock Text="" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="jpg" Foreground="Gray"/>
                        <TextBlock Text="kb/gb/mb" Foreground="Gray" Margin="0,5,0,0"/>
                        <TextBlock Text="C:/BLAHBLAH" Foreground="Gray" Margin="0,5,0,0"/>
                        <TextBlock Text="Active" Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>