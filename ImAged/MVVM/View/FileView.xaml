<UserControl x:Class="ImAged.MVVM.View.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImAged.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.4*" />
            <!-- File List -->
            <ColumnDefinition Width="*" />
            <!-- File Details -->
        </Grid.ColumnDefinitions>

        <!-- ✅ File List -->
        <DataGrid ItemsSource="{Binding Files}"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                  Style="{StaticResource GridTheme}"
                  Margin="10,89,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="100" />
                <DataGridTextColumn Header="Size (KB)" Binding="{Binding FileSize, StringFormat={}{0:N2}}" Width="100" />
                <DataGridTextColumn Header="Created" Binding="{Binding Created}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- ✅ File Details Panel -->
        <StackPanel Grid.Column="1" Margin="10">
            <Image Source="{Binding SelectedFile.ImagePath}"
                   Width="200" Height="140"
                   Stretch="Uniform"
                   Margin="0,0,0,10"/>
            <Separator/>

            <TextBlock Text="File Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding SelectedFile.FileName, StringFormat='Name: {0}'}" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding SelectedFile.FileType, StringFormat='Type: {0}'}" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding SelectedFile.FileSize, StringFormat='Size: {0:N2} KB'}" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding SelectedFile.FilePath, StringFormat='Location: {0}'}" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding SelectedFile.Created, StringFormat='Created: {0:MM/dd/yyyy HH:mm}'}" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding SelectedFile.State, StringFormat='State: {0}'}" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>