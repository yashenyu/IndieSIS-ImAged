<UserControl x:Class="ImAged.MVVM.View.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImAged.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <!-- Left -->
            <ColumnDefinition Width="*" />
            <!-- Right -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <DockPanel Margin="10" Grid.Column="0">
            <!-- Search + Filter -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBox Width="250"
                         Height="30"
                         Background="#1E1E1E"
                         Foreground="#FFAFAAAA"
                         Padding="5"
                         Text="Search" BorderBrush="#FF525252" />
                
                <Button Content="Filter (3)"
                        Background="#1E1E1E"
                        Foreground="#FFA2A2A2"
                        Margin="10,0,0,0"
                        Height="30"
                        Width="80" BorderBrush="#FF525252" Click="Button_Click" />
            </StackPanel>

            <!-- File List -->
            <ListView Background="#101010"
                      BorderThickness="0"
                      Foreground="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File name" Width="200" DisplayMemberBinding="{Binding FileName}" />
                        <GridViewColumn Header="Modified" Width="100" DisplayMemberBinding="{Binding Modified}" />
                        <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <!-- RIGHT SIDE -->
        <ScrollViewer Grid.Column="1" Background="#181818" Padding="10">
            <StackPanel>
                <!-- Image Preview -->
                <Image Source="preview.jpg"
                       Width="200"
                       Height="120"
                       Stretch="UniformToFill"
                       Margin="0,0,0,20" />

                <!-- No Access Text -->
                <TextBlock Text="You Don’t Have Access."
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,5"/>
                <TextBlock Text="You do not have permission to view sharing or editing information for this item."
                           Foreground="Gray"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20" />

                <!-- File Details -->
                <StackPanel>
                    <TextBlock Text="File Details" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Text="Views: 16" Foreground="Gray"/>
                    <TextBlock Text="Type: jpg" Foreground="Gray"/>
                    <TextBlock Text="File Size: 220 kb" Foreground="Gray"/>
                    <TextBlock Text="Storage Used: 200 kb" Foreground="Gray"/>
                    <TextBlock Text="Location: Work/User1" Foreground="Gray"/>
                    <TextBlock Text="Author: XAEUI" Foreground="Gray"/>
                    <TextBlock Text="Modified: 2025/18/16" Foreground="Gray"/>
                    <TextBlock Text="State: Active" Foreground="Gray"/>
                    <TextBlock Text="Opened: docx" Foreground="Gray"/>
                    <TextBlock Text="Category: Assets" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>