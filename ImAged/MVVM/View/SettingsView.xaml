<UserControl x:Class="ImAged.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImAged.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30,90,50,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="INDIESIS" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               FontSize="36" 
               Foreground="White" 
               FontFamily="Bahnschrift Light" 
               Height="41" 
               Margin="252,-67,0,0" 
               Grid.ColumnSpan="2"/>

            <!-- Top Left -->
            <Border Grid.Row="0" Grid.Column="0" 
            CornerRadius="20" 
            Background="#FF121212" 
            Margin="10">
                <StackPanel>
                    <Image Source="/Images/dre.jpg" 
                   Width="380"
                   Height="198" 
                   HorizontalAlignment="Stretch"
                   Stretch="Uniform" 
                   Margin="0,20,0,0"/>
                    <TextBlock Text="Dayrit, Mark Aaron B." 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,12,0,0"/>
                    <TextBlock Text="4th Computer Science Student" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"/>
                    <TextBlock Text="Holy Angel University" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"
                       Margin="0,0,0,26"/>
                </StackPanel>
            </Border>

            <!-- Top Right -->
            <Border Grid.Row="0" Grid.Column="1" 
            CornerRadius="20" 
            Background="#FF121212" 
            Margin="10">
                <StackPanel>
                    <Image Source="/Images/dre.jpg" 
                   Width="380" 
                   Height="198" 
                   HorizontalAlignment="Stretch" 
                   Stretch="Uniform" 
                   Margin="0,20,0,0"/>
                    <TextBlock Text="Pangan, Ric Chrisitian B." 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,12,0,0"/>
                    <TextBlock Text="4th Computer Science Student" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"/>
                    <TextBlock Text="Holy Angel University" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"
                       Margin="0,0,0,26"/>
                </StackPanel>
            </Border>

            <!-- Bottom Left -->
            <Border Grid.Row="1" Grid.Column="0" 
            CornerRadius="20" 
            Background="#FF121212" 
            Margin="10">
                <StackPanel>
                    <Image Source="/Images/dre.jpg" 
                   Width="380" 
                   Height="198" 
                   HorizontalAlignment="Stretch" 
                   Stretch="Uniform" 
                   Margin="0,20,0,0"/>
                    <TextBlock Text="Quizon, Andre Thomas M." 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,12,0,0"/>
                    <TextBlock Text="4th Computer Science Student" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"/>
                    <TextBlock Text="Holy Angel University" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="10"
                       Margin="0,0,0,26"/>
                </StackPanel>
            </Border>

            <!-- Bottom Right -->
            <Border Grid.Row="1" Grid.Column="1" 
            CornerRadius="20" 
            Background="#FF121212" 
            Margin="10">
                <StackPanel>
                    <Image Source="/Images/dre.jpg" 
                   Width="380"
                   Height="198" 
                   HorizontalAlignment="Stretch"
                   Stretch="Uniform" 
                   Margin="0,20,0,0"/>
                    <TextBlock Text="Siron, Carlo S." 
                       HorizontalAlignment="Center" 
                       Foreground="White"
                       FontSize="14" 
                       Margin="0,12,0,0"/>
