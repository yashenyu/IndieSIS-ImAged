<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style for the button that wraps image tiles -->
    <Style x:Key="ImageButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Base style for image tiles -->
    <Style x:Key="ImageTileBaseStyle" TargetType="Border">
        <Setter Property="Width" Value="170"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Margin" Value="0,0,10,10"/>
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" 
                                  Direction="270" 
                                  ShadowDepth="2" 
                                  Opacity="0.3" 
                                  BlurRadius="4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Image Tile Hover Effect -->
    <Style x:Key="ImageTileHoverStyle" TargetType="Border" BasedOn="{StaticResource ImageTileBaseStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#3D3D3D"/>
                <Setter Property="BorderBrush" Value="#606060"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="White" 
                                          Direction="270" 
                                          ShadowDepth="3" 
                                          Opacity="0.2" 
                                          BlurRadius="6"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlayStyle" TargetType="Border">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Progress Bar Style -->
    <Style x:Key="LoadingProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="BorderBrush" Value="#404040"/>
    </Style>

    <!-- Loading Text Style -->
    <Style x:Key="LoadingTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!-- File Info Overlay Style (only visible on hover) -->
    <Style x:Key="FileInfoOverlayStyle" TargetType="Border">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="0,0,0,0"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Style.Triggers>
            <!-- Show when parent Border (tile) is hovered -->
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- File Name Text Style -->
    <Style x:Key="FileNameTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- File Date Text Style -->
    <Style x:Key="FileDateTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

</ResourceDictionary>
