<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--───────────────────────────────────────────────────────────-->
    <!-- TRANSPARENT PAGE-BUTTON STYLE (used above & below thumb)  -->
    <!--───────────────────────────────────────────────────────────-->
    <Style x:Key="ScrollBarPageButton" TargetType="RepeatButton">
        <Setter Property="Focusable"          Value="False"/>
        <Setter Property="IsTabStop"          Value="False"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <!-- Empty transparent hit-area so PageUp / PageDown still work -->
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--───────────────────────────────────────────────────────────-->
    <!-- THUMB (the draggable pill)                                -->
    <!--───────────────────────────────────────────────────────────-->
    <Style x:Key="ScrollBarThumb" TargetType="Thumb">
        <Setter Property="Focusable"            Value="False"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Background"           Value="#707070"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border x:Name="Bg"
                            CornerRadius="1"
                            Background="{TemplateBinding Background}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#9A9A9A"/>
            </Trigger>
            <Trigger Property="IsDragging"  Value="True">
                <Setter Property="Background" Value="#CCCCCC"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--───────────────────────────────────────────────────────────-->
    <!-- VERTICAL SCROLLBAR TEMPLATE                               -->
    <!--───────────────────────────────────────────────────────────-->
    <ControlTemplate x:Key="VerticalScrollBar" TargetType="ScrollBar">
        <!-- No arrows, no rail – just track + thumb -->
        <Track x:Name="PART_Track" IsDirectionReversed="True">
            <Track.DecreaseRepeatButton>
                <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageUpCommand"/>
            </Track.DecreaseRepeatButton>

            <Track.Thumb>
                <Thumb Style="{StaticResource ScrollBarThumb}"/>
            </Track.Thumb>

            <Track.IncreaseRepeatButton>
                <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageDownCommand"/>
            </Track.IncreaseRepeatButton>
        </Track>
    </ControlTemplate>

    <!--───────────────────────────────────────────────────────────-->
    <!-- HORIZONTAL SCROLLBAR TEMPLATE                             -->
    <!--───────────────────────────────────────────────────────────-->
    <ControlTemplate x:Key="HorizontalScrollBar" TargetType="ScrollBar">
        <Track x:Name="PART_Track" Orientation="Horizontal">
            <Track.DecreaseRepeatButton>
                <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageLeftCommand"/>
            </Track.DecreaseRepeatButton>

            <Track.Thumb>
                <Thumb Style="{StaticResource ScrollBarThumb}"/>
            </Track.Thumb>

            <Track.IncreaseRepeatButton>
                <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageRightCommand"/>
            </Track.IncreaseRepeatButton>
        </Track>
    </ControlTemplate>

    <!--───────────────────────────────────────────────────────────-->
    <!-- BASE SCROLLBAR STYLE – picks template by orientation      -->
    <!--───────────────────────────────────────────────────────────-->
    <Style TargetType="ScrollBar">
        <Setter Property="SnapsToDevicePixels"  Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>

        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width"    Value="2"/>
                <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
            </Trigger>

            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Height"   Value="2"/>
                <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
